{
  "name": "gundam-card-game",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive Gundam Card Game website combining card database and deck building functionality",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup:env": "node scripts/setup-env.js",
    "env:create": "node scripts/setup-env.js --create",
    "env:validate": "node scripts/setup-env.js --validate",
    "env:secrets": "node scripts/setup-env.js --secrets",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "node scripts/seed-database.js",
    "db:studio": "prisma studio",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules/.cache uploads/*",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:analyze": "ANALYZE=true npm run build",
    "setup": "npm install && npm run env:create && npm run db:generate && npm run docker:dev",
    "setup:full": "npm run setup && npm run db:migrate && npm run db:seed",
    "dev:full": "npm run docker:dev && npm run dev",
    "check": "npm run type-check && npm run lint && npm run test:ci",
    "check:sizes": "node scripts/check-file-sizes.js --check",
    "precommit": "npm run format && npm run check",
    "quality": "npm run check && npm run check:sizes",
    "prepare": "husky install"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.7.1",
    "@reduxjs/toolkit": "^2.0.1",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "next": "15.5.3",
    "next-auth": "^4.24.5",
    "prisma": "^5.7.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.0.4",
    "redis": "^4.6.12",
    "sharp": "^0.33.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
