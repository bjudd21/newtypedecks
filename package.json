{
  "name": "gundam-card-game",
  "version": "0.1.0",
  "private": true,
  "description": "A comprehensive Gundam Card Game website combining card database and deck building functionality",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup:env": "node scripts/setup-env.js",
    "env:create": "node scripts/setup-env.js --create",
    "env:validate": "node scripts/setup-env.js --validate",
    "env:secrets": "node scripts/setup-env.js --secrets",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "node scripts/seed-database.js",
    "db:studio": "prisma studio",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules/.cache uploads/*",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:analyze": "ANALYZE=true npm run build",
    "setup": "npm install && npm run env:create && npm run db:generate && npm run docker:dev",
    "setup:full": "npm run setup && npm run db:migrate && npm run db:seed",
    "dev:full": "npm run docker:dev && npm run dev",
    "check": "npm run type-check && npm run lint && npm run test:ci",
    "check:sizes": "node scripts/check-file-sizes.js --check",
    "precommit": "npm run format && npm run check",
    "quality": "npm run check && npm run check:sizes",
    "deploy": "scripts/deployment/deploy.sh",
    "deploy:docker": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:k8s": "kubectl apply -f k8s/",
    "health": "curl http://localhost:3000/api/health",
    "backup": "scripts/deployment/backup.sh",
    "logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prepare": "husky install"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@reduxjs/toolkit": "^2.10.1",
    "@sentry/nextjs": "^10.25.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.3",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "next": "15.5.3",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.10",
    "prisma": "^5.22.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "redis": "^4.7.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.5.3",
    "glob": "^11.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "overrides": {
    "@istanbuljs/load-nyc-config": {
      "js-yaml": "^4.1.1"
    }
  }
}
